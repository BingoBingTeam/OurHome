<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/media_panel_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/dialog_record_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音"
            android:textColor="#333333"
            android:textSize="8sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/media_record_microphone_bg" >

            <ImageView
                android:id="@+id/dialog_record_microphone_recording_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/media_record_recording"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dialog_record_microphone_volume_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/media_record_microphone_volume_0" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_record_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/media_player_toolbar_bg"
        android:gravity="center" >

        <Button
            android:id="@+id/dialog_record_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:minHeight="4dp"
            android:minWidth="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/media_restart_selector"
            android:enabled="false"
            android:text="重置"
            android:textColor="#000000" />

        <Button
            android:id="@+id/dialog_record_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:minHeight="4dp"
            android:minWidth="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/media_pause_selector"
            android:text="暂停"
            android:textColor="#000000"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_record_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:minHeight="4dp"
            android:minWidth="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/media_play_selector"
            android:text="开始"
            android:textColor="#000000" />

        <Button
            android:id="@+id/dialog_record_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:minHeight="4dp"
            android:minWidth="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/media_stop_selector"
            android:text="停止"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>